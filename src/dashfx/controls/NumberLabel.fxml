			</dashfx.lib.controls.fxmlutils.CollapsableHBox>
			<dashfx.lib.controls.fxmlutils.FormattableLabel format="${base.custom.format}" value="${base.value}" />
		</HBox>
	</ui>
</NumberControlBase>
