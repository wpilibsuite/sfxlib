<?import dashfx.controls.bases.*?>

<NumberControlBase fx:id="base" xmlns:fx="http://javafx.com/fxml">
	<ui>
		<HBox>
			<dashfx.lib.controls.fxmlutils.CollapsableHBox>
				<Label text="${base.label}" visible="${base.showLabel}"  />
